# Begin ~/.bashrc.d/00-path

if [ -d /usr/local ] ; then
  pathappend /usr/local/bin
  pathappend /usr/local/sbin
  pathappend /usr/local/share/man MANPATH
fi

pathappend /usr/bin
pathappend /usr/sbin
pathappend /usr/share/man MANPATH

pathappend /bin
pathappend /sbin

if [ -d /usr/X11 ] ; then
  pathappend /usr/X11/bin
  pathappend /usr/X11/share/man MANPATH
fi

# $ brew install coreutils
if [ -n "$(which brew 2> /dev/null)" ] ; then
  GNU_PREFIX=$(brew --prefix coreutils 2> /dev/null)
  if [ -d "$GNU_PREFIX" ] ; then
    pathprepend $GNU_PREFIX/libexec/gnubin
    pathprepend $GNU_PREFIX/libexec/gnuman MANPATH
  fi
  unset GNU_PREFIX
fi

if [ -d ~/bin ] ; then
  pathappend ~/bin
fi

# End ~/.bashrc.d/00-path
